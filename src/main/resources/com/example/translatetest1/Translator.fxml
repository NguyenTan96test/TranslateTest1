<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.translatetest1.Translator">
   <children>
      <TextField fx:id="inputWord" alignment="TOP_LEFT" layoutX="80.0" layoutY="91.0" onKeyReleased="#translateWord" prefHeight="200.0" prefWidth="194.0">
         <font>
            <Font size="21.0" />
         </font>
      </TextField>
      <TextArea fx:id="outputWord" layoutX="358.0" layoutY="91.0" prefHeight="200.0" prefWidth="200.0">
         <font>
            <Font size="18.0" />
         </font>
      </TextArea>
      <Label fx:id="first" layoutX="78.0" layoutY="43.0" prefHeight="46.0" prefWidth="221.0" text="English">
         <font>
            <Font size="31.0" />
         </font></Label>
      <Label fx:id="second" layoutX="361.0" layoutY="43.0" prefHeight="46.0" prefWidth="194.0" text="Vietnamese">
         <font>
            <Font size="31.0" />
         </font>
      </Label>
      <Button layoutX="86.0" layoutY="291.0" mnemonicParsing="false" onAction="#speakWord" text="Speak" />
      <Button layoutX="284.0" layoutY="150.0" mnemonicParsing="false" onAction="#switchlanguage">
         <graphic>
            <FontIcon iconLiteral="fab-accessible-icon" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
